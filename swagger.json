      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 408
        },
        "titel" : {
          "type" : "string",
          "example" : "Ideen Name"
        },
        "description" : {
          "type" : "string",
          "example" : "Meine Idee ist..."
        },
        "userID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 12
        },
        "status" : {
          "type" : "string",
          "enum" : [ "created", "published", "onHold", "underReview", "BeeingImplemented", "Done" ]
        },
        "numberOfRatings" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 0
        },
        "sumOfAllRatings" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 0
        }
      }
    },
    "Comment" : {
      "required" : [ "commentID", "userID", "ideaID", "text" ],
      "properties" : {
        "commentID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 10
        },
        "uerID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 12
        },
        "ideaID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 1
        },
        "text" : {
          "type" : "string",
          "example" : "Eine gute Idee!"
        }
      }
    },
    "Rating" : {
      "required" : [ "ratingID", "userID", "ideaID", "rating" ],
      "properties" : {
        "ratingID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 10
        },
        "userID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 12
        },
        "ideaID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 1
        },
        "rating" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 5,
          "minimum" : 0,
          "maximum" : 10
        }
      }
    },
    "IdeaHistory" : {
      "required" : [ "historyID", "ideaID", "userID", "aktion" ],
      "properties" : {
        "historyID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 1
        },
        "ideaID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 4
        },
        "userID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 7
        },
        "aktion" : {
          "type" : "string",
          "enum" : [ "Idee wurde geändert.", "Kommentar wurde angelegt." ]
        }
      }
    },
    "User" : {
      "required" : [ "userID", "password", "name" ],
      "properties" : {
        "userID" : {
          "type" : "integer",
          "format" : "int64",
          "example" : 2
        },
        "password" : {
          "type" : "string",
          "example" : "a141ae2a840c11f7d6a8f550bb6811f5"
        },
        "name" : {
          "type" : "string",
          "example" : "Test User"
        }
      }
    }
  }
