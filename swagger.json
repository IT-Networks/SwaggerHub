  "paths" : {
    "/idea" : {
      "post" : {
        "tags" : [ "idea" ],
        "summary" : "Anlegen eine Idee",
        "operationId" : "createIdea",
        "description" : "Hier wird bei Aufruf eine Idee erstellt und dem der mitgegebenen User Id zugeteilt",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "idea",
          "description" : "Idee die übergeben wird.",
          "schema" : {
            "type" : "object",
            "required" : [ "titel", "description", "userID", "status" ],
            "properties" : {
              "titel" : {
                "type" : "string",
                "example" : "Ideen Name"
              },
              "description" : {
                "type" : "string",
                "example" : "Meine Idee ist..."
              },
              "userID" : {
                "type" : "integer",
                "format" : "int64",
                "example" : 12
              },
              "status" : {
                "type" : "string",
                "enum" : [ "created" ]
              }
            }
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Die Idee wurde erfolgreich angelegt!",
            "schema" : {
              "$ref" : "#/definitions/Idea"
            }
          },
          "400" : {
            "description" : "Fehlerhaft Eingabeparameter."
          },
          "500" : {
            "description" : "Der Server kann die Anfrage aufgrund eines internen Fehlers nicht ausführen."
          }
        }
      }
    },
    "/idea/{userID}" : {
      "get" : {
        "tags" : [ "idea" ],
        "summary" : "Lade alle Ideen eines Users",
        "description" : "Mit übergeben der UserID werden alle Ideen eines Users in einem Array übergeben",
        "operationId" : "getIdeasByUserID",
        "produces" : [ "application/json", "application/xml" ],
        "parameters" : [ {
          "name" : "userID",
          "in" : "path",
          "description" : "UserID, zu dem die Ideen ausgegeben werden sollen",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "200" : {
            "description" : "Request konnte erfolgreich ausgeführt werden.",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Idea"
              }
            }
          },
          "400" : {
            "description" : "Fehlerhaft Eingabeparameter."
          },
          "404" : {
            "description" : "Unter der angegebenen ID konnte kein User gefunden werden."
          },
          "500" : {
            "description" : "Der Server kann die Anfrage aufgrund eines internen Fehlers nicht ausführen."
          }
        }
      }
    },
    "/idea/{ideaID}/comment" : {
      "post" : {
        "tags" : [ "comment" ],
        "summary" : "Anlage eines Kommentar zu einer Idee",
        "description" : "Die IdeaID wird im Pfad angegeben und der Kommentar im body des Requests. Zusätzlich erfolgt ein Eintrag in die Historie der Idee.",
        "operationId" : "createCommentToIdea",
        "consumes" : [ "application/json", "application/xml" ],
        "produces" : [ "application/json", "application/xml" ],
        "parameters" : [ {
          "name" : "ideaID",
          "in" : "path",
          "description" : "ID der Idee, zu dem ein Kommentar angelegt werden soll",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        }, {
          "name" : "status",
          "description" : "Ein Kommentar kann nur im Status Published und UnderReview angelegt werden.",
          "in" : "query",
          "enum" : [ "Published", "UnderReview" ],
          "required" : true,
          "type" : "string"
        }, {
          "name" : "comment",
          "in" : "body",
          "description" : "Kommentar, der übergeben wird",
          "required" : true,
          "schema" : {
            "type" : "object",
            "required" : [ "userID", "text" ],
            "properties" : {
              "userID" : {
                "type" : "integer",
                "format" : "int64",
                "example" : 12
              },
              "text" : {
                "type" : "string",
                "example" : "Eine gute Idee!"
              }
            }
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Kommentar wurde erfolgreich angelegt.",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Comment"
              }
            }
          },
          "400" : {
            "description" : "Fehlerhaft Eingabeparameter."
          },
          "404" : {
            "description" : "Unter der angegebenen ID konnte keine Idee gefunden werden."
          },
          "500" : {
            "description" : "Der Server kann die Anfrage aufgrund eines internen Fehlers nicht ausführen."
          }
        }
      }
    },
    "/idea/{ideaID}/rating" : {
      "post" : {
        "tags" : [ "rating" ],
        "summary" : "Anlage eines Rating zu einer Idee",
        "description" : "Die IdeaID wird im Pfad angegeben und das Rating im body des Requests.",
        "operationId" : "createRatingToIdea",
        "consumes" : [ "application/json", "application/xml" ],
        "produces" : [ "application/json", "application/xml" ],
        "parameters" : [ {
          "name" : "ideaID",
          "in" : "path",
          "description" : "ID der Idee, zu dem ein Rating angelegt werden soll",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        }, {
          "name" : "status",
          "description" : "Ein Rating kann nur im Status Published und UnderReview angelegt werden.",
          "in" : "query",
          "enum" : [ "Published", "UnderReview" ],
          "required" : true,
          "type" : "string"
        }, {
          "name" : "rating",
          "in" : "body",
          "description" : "Rating, das übergeben wird",
          "required" : true,
          "schema" : {
            "type" : "object",
            "required" : [ "userID", "rating" ],
            "properties" : {
              "userID" : {
                "type" : "integer",
                "format" : "int64",
                "example" : 12
              },
              "rating" : {
                "type" : "integer",
                "format" : "int64",
                "example" : 5,
                "minimum" : 0,
                "maximum" : 10
              }
            }
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Rating wurde erfolgreich angelegt.",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Rating"
              }
            }
          },
          "400" : {
            "description" : "Fehlerhaft Eingabeparameter."
          },
          "404" : {
            "description" : "Unter der angegebenen ID konnte keine Idee gefunden werden."
          },
          "500" : {
            "description" : "Der Server kann die Anfrage aufgrund eines internen Fehlers nicht ausführen."
          }
        }
      }
    },
    "/user" : {
      "post" : {
        "tags" : [ "user" ],
        "summary" : "Anlegen eines Users",
        "operationId" : "createUser",
        "description" : "Anlage eins Users für die IdeaWall",
        "consumes" : [ "application/json", "application/xml" ],
        "produces" : [ "application/json", "application/xml" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "user",
          "description" : "Userdaten die übergeben werden",
          "schema" : {
            "type" : "object",
            "required" : [ "name", "password" ],
            "properties" : {
              "name" : {
                "type" : "string",
                "example" : "Test User"
              },
              "password" : {
                "type" : "string",
                "example" : "a141ae2a840c11f7d6a8f550bb6811f5"
              }
            }
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "Der User wurde erfolgreich angelegt",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/User"
              }
            }
          },
          "400" : {
            "description" : "Fehlerhaft Eingabeparameter."
          },
          "500" : {
            "description" : "Der Server kann die Anfrage aufgrund eines internen Fehlers nicht ausführen."
          }
        }
      }
    }
